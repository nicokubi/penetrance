 suppressMessages(suppressWarnings(capture.output(for(i in 1:numberFamilies) {
  # Cancers
  cancers = "Breast"
  # Genes
  genes = "BRCA1"
  # Family members
  nSibsPatern = floor(rtruncnorm(n=2, mean=0, 1))
